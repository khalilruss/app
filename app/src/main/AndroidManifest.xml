<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kierigby.bountyhunter">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name=".GlobalUser"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NotificationsActivity"></activity>
        <activity android:name=".LobbyActivity" />
        <activity android:name=".JoinGameActivity" />
        <activity android:name=".CreateGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoggedInActivity" />
        </activity>
        <activity android:name=".ChangePasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditProfileActivity" />
        </activity>
        <activity android:name=".EditProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoggedInActivity" />
        </activity>
        <activity android:name=".StatsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoggedInActivity" />
        </activity>
        <activity android:name=".SearchFriendActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyFriendsActivity" />
        </activity>
        <activity android:name=".MyFriendsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoggedInActivity" />
        </activity>
        <activity android:name=".LoggedInActivity" />
        <activity android:name=".RegisterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ForgottenPassActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".NewPasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="api.bountyhunt.me"
                    android:pathPrefix="/users/resetpassword"
                    android:scheme="http" />
            </intent-filter>
        </activity>
    </application>

</manifest>